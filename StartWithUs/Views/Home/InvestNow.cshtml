<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../images/money1.jpg')">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <form class="login100-form validate-form flex-sb flex-w" action="~/Home/PayNow">
                    <span class="login100-form-title p-b-53">
                        <h3>INVEST HERE</h3>
                    </span>
                    @Html.DropDownList("Id", ViewBag.CompaniesSelectList as SelectList, "Select Company", new { style = "width: 450px; padding:15px; border:3px solid #7D7D7D; border-radius:5px;", @class = "form-control", Required = "required" })
                
                <div class="checkbox1" data-validate="Agree to terms and condition">
                    <a href="~/Home/TNC">Read Terms and Conditions</a><br />
                    <input type="checkbox" id="chk1" required />
                    <h6>I have read the terms and conditions*</h6>
                </div>
                <div class="container-login100-form-btn m-t-17">
                    <input type="submit" class="btn1 login1000-form-btn" value="Proceed to Pay" />
                    @*<a class="btn1 login1000-form-btn" href="~/Home/PayNow">Proceed to Pay</a>*@
                    @*<button class="login1000-form-btn">
                        Proceed to Pay
                    </button>*@
